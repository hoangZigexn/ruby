<% provide(:title, "Home") %>

<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "static_pages", :media => "all" %>
<% end %>

<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= link_to gravatar_for(current_user, size: 50), current_user %>
        <h1>
          <%= current_user.name %>
        </h1>
        <span>
          <%= link_to "view my profile", current_user %>
        </span>
        <span>
          <%= pluralize(current_user.microposts.count, "micropost") %>
        </span>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Welcome to your dashboard!</h3>
      <p>You have created <strong><%= current_user.microposts.count %></strong> microposts.</p>
      <p><%= link_to 'Create a new micropost', new_micropost_path, class: 'btn btn-primary' %></p>
      <p><%= link_to 'View all microposts', microposts_path, class: 'btn btn-secondary' %></p>
    </div>
  </div>
<% else %>
  <div class="home-page">
    <div class="container">
      <h1>Sample App</h1>
      <p class="subtitle">Welcome to the Ruby on Rails Tutorial</p>
      
      <div class="description">
        This is the home page for the
        <a href="https://www.railstutorial.org/" style="color: #667eea; text-decoration: none; font-weight: bold;">Ruby on Rails Tutorial</a>
        sample application. Learn how to build professional-grade web applications with Rails!
      </div>
      
      <div class="cta-buttons">
        <a href="/users" class="btn">View Users</a>
        <a href="/microposts" class="btn btn-secondary">View Microposts</a>
      </div>
      
      <div class="features">
        <div class="feature">
          <h3>ðŸ‘¥ User Management</h3>
          <p>Create, edit, and manage user accounts with full CRUD functionality.</p>
        </div>
        <div class="feature">
          <h3>ðŸ’¬ Microposts</h3>
          <p>Share short messages and connect with other users in the community.</p>
        </div>
        <div class="feature">
          <h3>ðŸ”— Relationships</h3>
          <p>Built-in associations between users and microposts for a complete social experience.</p>
        </div>
      </div>
      
      <div class="cta-buttons bottom">
        <a href="/static_pages/help" class="btn">Get Help</a>
        <a href="/static_pages/about" class="btn btn-secondary">About Us</a>
      </div>
    </div>
  </div>
<% end %>
