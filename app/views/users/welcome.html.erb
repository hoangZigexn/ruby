<!-- Welcome Page after Signup -->
<section class="welcome-section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-md-10">
        <div class="welcome-card text-center">
          <div class="welcome-icon mb-4">
            <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
          </div>
          
          <h1 class="welcome-title mb-3">Welcome!</h1>
          <p class="welcome-subtitle mb-4">
            Your account has been created successfully. You can now start using the application features.
          </p>
          
          <div class="user-info-card mb-4">
            <h3>Account Information</h3>
            <div class="row">
              <div class="col-md-6">
                <p><strong>Full Name:</strong> <%= @user.name %></p>
                <p><strong>Email:</strong> <%= @user.email %></p>
              </div>
              <div class="col-md-6">
                <p><strong>Age:</strong> <%= @user.age %></p>
                <p><strong>Gender:</strong> 
                  <% case @user.gender %>
                  <% when 1 %>
                    Male
                  <% when 2 %>
                    Female
                  <% when 3 %>
                    Other
                  <% else %>
                    Not specified
                  <% end %>
                </p>
              </div>
            </div>
          </div>
          
          <div class="welcome-actions">
            <%= link_to "View Profile", user_path(@user), class: "btn btn-primary btn-lg me-3" %>
            <%= link_to "Go to Home", home_path, class: "btn btn-outline-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.welcome-section {
  padding: 100px 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.welcome-card {
  background: white;
  border-radius: 15px;
  padding: 3rem;
  box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

.welcome-title {
  color: #333;
  font-weight: 700;
}

.welcome-subtitle {
  color: #666;
  font-size: 1.1rem;
}

.user-info-card {
  background: #f8f9fa;
  border-radius: 10px;
  padding: 2rem;
  border-left: 4px solid #28a745;
}

.user-info-card h3 {
  color: #333;
  margin-bottom: 1.5rem;
}

.user-info-card p {
  margin-bottom: 0.5rem;
  color: #555;
}

.welcome-actions {
  margin-top: 2rem;
}
</style>
