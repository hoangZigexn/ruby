<%= form_for(@user, html: { class: "user-form" }) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
      <ul class="mb-0">
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Full Name", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Enter your full name" %>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :first_name, "First Name", class: "form-label" %>
        <%= f.text_field :first_name, class: "form-control", placeholder: "Enter your first name" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :last_name, "Last Name", class: "form-label" %>
        <%= f.text_field :last_name, class: "form-control", placeholder: "Enter your last name" %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :age, class: "form-label" %>
        <%= f.number_field :age, class: "form-control", placeholder: "Enter your age", min: 1, max: 120 %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :gender, class: "form-label" %>
        <%= f.select :gender, options_for_select([['Select Gender', ''], ['Male', 1], ['Female', 2], ['Other', 3]], @user.gender), {}, { class: "form-control" } %>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :birthday, "Birthday", class: "form-label" %>
    <%= f.text_field :birthday, class: "form-control", placeholder: "YYYY-MM-DD (e.g., 1990-01-15)" %>
  </div>
  
  <% if @user.new_record? %>
    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password (minimum 6 characters)" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :password, "Current Password", class: "form-label" %>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter current password to change it" %>
    </div>
    
    <div class="form-group">
      <%= f.label :password_confirmation, "New Password", class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Enter new password (minimum 6 characters)" %>
    </div>
  <% end %>
  
  <% if admin_user? %>
    <div class="form-group">
      <div class="form-check">
        <%= f.check_box :admin, class: "form-check-input" %>
        <%= f.label :admin, "Admin User", class: "form-check-label" %>
      </div>
    </div>
  <% end %>
  
  <div class="form-actions">
    <%= f.submit class: "btn btn-primary btn-lg" %>
    <%= link_to 'Cancel', @user.persisted? ? @user : users_path, class: "btn btn-secondary btn-lg" %>
  </div>
<% end %>
